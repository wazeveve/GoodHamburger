@using GoodHamburguer.Models;



<div class="col-12 col-md-6 text-center my-2">
    <div>
        <h4 style="font-family: Almendra">@Dish.Name</h4>
    </div>
    <div>
        <img alt="@Dish.Name" src="@Dish.ImgUrl" style="width: 70%; border-radius: 15px" />
    </div>
    <div>
        <p class="desc-text"> @Dish.Description </p>
        <p class="desc-text"> Price: $ @Dish.Price.ToString("N2")</p>
    </div>
    <div>
        <button class="btn btn-primary" @onclick="AddToCart" title="Add to cart" aria-label="Add @Dish.Name to cart" >
            Add to cart
        </button>
        <p>@debug</p>
    </div>
</div>


@code {
    [Parameter, EditorRequired]
    public Dish Dish { get; set; } = default!;

    [Parameter]
    public EventCallback<Dish> OnAddToCart { get; set; }

    private string debug = "";

    private async Task AddToCart()
    {
        debug = "CLICKED!";

        if (OnAddToCart.HasDelegate)
            await OnAddToCart.InvokeAsync(Dish);
    }

}
